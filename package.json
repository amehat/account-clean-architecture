{
    "name": "account-clean-architecture",
    "version": "1.0.1",
    "description": "Application for managing personal accounts in Clean Architecture",
    "license": "MIT",
    "main": "dist/index.js",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start": "nest start",
        "dev": "ts-node-dev --transpile-only -r tsconfig-paths/register src/infrastructure/nestjs/application/main.ts",
        "test": "pnpm run test:unit:e2e && pnpm run test:bdd",
        "test:unit:e2e": "jest",
        "test:unit:e2e:watch": "jest --watch",
        "test:bdd": "cucumber-js"
    },
    "dependencies": {
        "@cucumber/cucumber": "8.5.2",
        "@nestjs/cli": "8.2.6",
        "@nestjs/common": "^8.4.6",
        "@nestjs/core": "^8.4.6",
        "@nestjs/platform-express": "^8.4.6",
        "@nestjs/schematics": "8.0.11",
        "@nestjs/testing": "^8.4.5",
        "jest": "^28.1.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.5",
        "ts-loader": "^9.3.0",
        "ts-node": "^10.7.0",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^4.0.0",
        "typescript": "^4.3.5"
    },
    "devDependencies": {
        "@types/jest": "^26.0.11",
        "@types/node": "^17.0.38",
        "@types/supertest": "^2.0.12",
        "cucumber-console-formatter": "^1.0.0",
        "cucumber-pretty": "^1.5.0"
    }
}